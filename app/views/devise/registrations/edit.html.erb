<div class="container" style="margin-top: 20px;">
  <div class="row">
    <div class="col-md-9">

      <div class="panel panel-default main-panel">
        <div class="panel-heading">
          <h1 class="panel-header">
            Edit <%= resource_name.to_s.humanize %>
            <%= image_tag @user.avatar.url(:thumb), class: "pull-right img-thumbnail" %>
          </h1>
        </div>
        <div class="panel-body">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.file_field :avatar %>
            </div>

              <div class="form-group">
                    <%= f.text_field :username, autofocus: true, :tabindex => "1", id: "display_name", placeholder: "Username", class: "form-control input-lg" %>
              </div>



              <div class="form-group">
                    <%= f.email_field :email, :tabindex => "2", id: "email", placeholder: "Email", class: "form-control input-lg" %>
              </div>


            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <div class="row">
                <div class="col-md-6">
                  <%= f.password_field :password, autocomplete: "off", :tabindex => "3", id: "password", placeholder: "Change Password", class: "form-control input-lg" %>
                </div>
                <div class="col-md-6">
                    <%= f.password_field :password_confirmation, autocomplete: "off", :tabindex => "4", id: "password_confirm", placeholder: "Confirm Password", class: "form-control input-lg" %>
                </div>
              </div>
            </div>


            <div class="form-group">
              <h4>Enter current password to make changes:</h4>
              <%= f.password_field :current_password, autocomplete: "off", :tabindex => "5", id: "password_current", placeholder: "Current Password", class: "form-control input-lg"  %>
            </div>

            <div><%= f.submit "Update", class: "btn btn-blue buy" %></div>
          <% end %>

        </div>
        <div class="panel-footer">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: "btn btn-danger pull-right", method: :delete %>
        <h3>Cancel my account</h3>
        <div class="clearfix"></div>
        </div>
      </div>

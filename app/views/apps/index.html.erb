
  <div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="panel-heading">
          <h3 class="panel-header"> <small>Choose a blog or category to start learning...</small>
          <br />
          <br/>
          <div class="col-md-6">
            <% @tags.each do |f| %>
              <%= link_to f, tag_path("#{f}"), class: "btn btn-md btn-default", style: "margin-top: 5px; margin-bottom: 5px;" %>
            <% end %>
          </div>

            <div class="btn-group pull-right">
              <button type="button" class="btn btn-lg btn-default dropdown-toggle" data-toggle="dropdown">
                <%= params[:most_viewed].nil? ? "Most Viewed": params[:most_viewed].classify %> <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Today", root_path(most_viewed: "day") %></li>
                <li><%= link_to "This Week", root_path(most_viewed: "week") %></li>
                <li><%= link_to "This Month", root_path(most_viewed: "month") %></li>
                <li class="divider"></li>
                <li><%= link_to "This Year", root_path(most_viewed: "year") %></li>
              </ul>
            </div>
          </h1>




          <div class="clearfix"></div>
          </div>
        </div>



        <div class="panel-body">

          <div class="row">
            <% @apps.each do |app| %>
            

              <div class="col-md-3">
                <div class="panel panel-default">
                  <div class="panel-body" style="padding:0px;">
  
                    <div class="sliderContainer">
                      <div class="royalSlider rsDefault sliderInLightbox">


        
                          <%=link_to( image_tag(app.image.url(:medium), :class => " app-image", :style => "width:100%; height:250px;"), app_path(app)) %> 


                          

                          
                          
                      </div>
                      <style type="text/css">
                      /* just some styles to define the size of slider */
                      .sliderContainer,
                      .sliderInLightbox {
                        width: 100%; 
                        height: 250px; 
                        max-width: 700px; 
                        margin: 0 auto;
                      }

                      @media screen and (max-width: 760px) {
                        .sliderContainer,
                        .sliderInLightbox {
                          height: 300px;
                        }
                      }
                      </style>
                      <script>
                      jQuery(document).ready(function($) {
                        /* initialize slider as usual */
                        $('.sliderInLightbox').royalSlider({
                          imageScaleMode: 'fill',
                          keyboardNavEnabled: true,
                          video: {
                            autoHideControlNav: true
                          }
                        });
                      });
                      </script>
                    </div>
                  </div>
                  <div class="panel-footer">
                    <h4><%=app.name%>
                     
                    <span class="pull-right"><%=app.impressionist_count%> views</span>

                      <!-- Modal -->
                      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-xl">

                          <div class="modal-content">
       
                            <div class="modal-body">

                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                              <h4 class="modal-title panel-header" id="myModalLabel"><%=app.name%></h4>
                              <div class="clearfix"></div>
                              <iframe class="container well well-large span6"
                                                   style="width: 100%%; height:600px"
                                                   src="<%=app.url%>">
                              </iframe>
                            </div>
                            <div class="modal-footer">
                            <%= link_to 'View', app_path(app), class: "btn btn-warning buy" %>
                              <button type="button" class="btn btn-green">Buy</button>
                            </div>
                          </div>
                        </div>
                      </div>

                    <div class="clearfix"></div>
                    </h4>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

       
        <div class="panel-footer main-footer">

        </div>
      </div>

    </div>
  </div>



<%= form_for(@app) do |f| %>
  <% if @app.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@app.errors.count, "error") %> prohibited this app from being saved:</h2>

      <ul>
      <% @app.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :tags %>
    <%= f.text_field :tag_list, placeholder: "Tags (ex. Angel Investing, SEO, Marketing, Web Design)", class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "Company's Name or Person's Name", class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, :col => 10, :rows => 6, placeholder: "Blog Description", class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.text_field :url, placeholder: "URL (ex. http://blog.ycombinator.com)", class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <div><%= f.submit "Submit", class: "btn btn-blue buy pull-right" %></div>
  </div>
<% end %>











